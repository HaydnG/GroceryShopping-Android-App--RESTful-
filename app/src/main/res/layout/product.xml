<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="190dp"
    android:layout_height="207dp"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@color/card"
    app:cardCornerRadius="4dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="@color/textBackground"
            android:gravity="center"
            android:text="Name of product"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@+id/product_name"
            android:layout_marginTop="-2dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/placeholder" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="168dp"
            android:layout_marginBottom="15dp"
            android:text="TextView"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="£10.0" />

        <TextView
            android:id="@+id/product_cartNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="168dp"
            android:layout_marginBottom="19dp"
            android:layout_toEndOf="@+id/product_Removefromcart"
            android:layout_toRightOf="@+id/product_Removefromcart"
            android:text="TextView"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="5" />

        <Button
            android:id="@+id/product_Addtocart"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="154dp"
            android:layout_marginBottom="6dp"
            android:layout_toEndOf="@+id/product_cartNum"
            android:layout_toRightOf="@+id/product_cartNum"
            android:background="@color/remove"
            android:text="➕"
            android:textAllCaps="false"
            android:textSize="24sp" />

        <Button
            android:id="@+id/product_Removefromcart"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="154dp"
            android:layout_marginBottom="7dp"
            android:layout_toEndOf="@+id/product_price"
            android:layout_toRightOf="@+id/product_price"
            android:background="@color/add"
            android:text="➖"
            android:textAllCaps="false"
            android:textSize="24sp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>